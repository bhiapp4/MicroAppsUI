{
  "name": "micro-apps-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "live-server dist --host=localhost --port=4201",
    "build": "npm run build:shared && npm run build:shell && npm run build:clients",
    "build:shell": "ng build --prod --project shell --output-path dist/shell",
    "build:shared": "ng build shared --prod",
    "build:app1": "ng build app1 --prod",
    "build:app2": "ng build app2 --prod",
    "build:clients": "npm run build:app1 && npm run build:app2",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "ngcc",
    "postbuild:shell": "shx cp -r \"dist/shell/*\" \"dist/\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.12",
    "@angular/common": "~9.1.12",
    "@angular/compiler": "~9.1.12",
    "@angular/core": "~9.1.12",
    "@angular/elements": "~9.1.12",
    "@angular/forms": "~9.1.12",
    "@angular/platform-browser": "~9.1.12",
    "@angular/platform-browser-dynamic": "~9.1.12",
    "@angular/router": "~9.1.12",
    "@webcomponents/custom-elements": "^1.4.3",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.14",
    "@angular-devkit/build-ng-packagr": "~0.901.14",
    "@angular/cli": "~9.1.12",
    "@angular/compiler-cli": "~9.1.12",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~3.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "live-server": "^1.2.0",
    "ng-packagr": "^9.0.0",
    "protractor": "~7.0.0",
    "shx": "^0.3.3",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.8.3"
  }
}
